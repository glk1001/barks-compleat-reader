<ComicBookReaderScreen>:
    orientation: "vertical"

    ActionBar:
        id: comic_action_bar
        size: root.width, root.ACTION_BAR_HEIGHT

        ActionView:
            use_separator: False

            ActionPrevious:
                title: root.action_bar_title
                color: root.ACTION_BAR_TITLE_COLOR
                markup: True
                with_previous: False
                app_icon: root.app_icon_filepath

            ActionOverflow:

            BarButton:
                text: "Close"
                icon: str(sys_paths.get_barks_reader_close_icon_file())
                important: True
                on_release: root.comic_book_reader.close_comic_book_reader(root.ids.fullscreen_button)

            BarButton:
                id: fullscreen_button
                text: "Fullscreen"
                icon: str(sys_paths.get_barks_reader_fullscreen_icon_file())
                important: True
                on_press: root.comic_book_reader.toggle_fullscreen(self)

            ActionSeparator:

            BarButton:
                text: "Goto Start"
                icon: str(sys_paths.get_barks_reader_goto_start_icon_file())
                on_release: root.comic_book_reader.goto_start_page(self)

            BarButton:
                text: "Goto End"
                icon: str(sys_paths.get_barks_reader_goto_end_icon_file())
                on_release: root.comic_book_reader.goto_last_page(self)

            BarButton:
                id: goto_page_button
                text: "Goto Page"
                icon: str(sys_paths.get_barks_reader_goto_icon_file())
                on_release: root.comic_book_reader.goto_page(self)
