<WordStatDropDown@DropDown>:
    auto_width: False
    width: dp(130)

    Button:
        text: "Most Frequent"
        size_hint_y: None
        height: dp(40)
        background_color: 0.12, 0.12, 0.12, 1
        color: 1, 1, 1, 1
        on_release: root.select("most_frequent.png")

    Button:
        text: "Word Cloud"
        size_hint_y: None
        height: dp(40)
        background_color: 0.12, 0.12, 0.12, 1
        color: 1, 1, 1, 1
        on_release: root.select("word_cloud.png")

<StatMenuButton>:
    background_normal: ''
    background_down: ''
    border: (0, 0, 0, 0)
    background_color: (0.0, 0.55, 0.0, 1) if self.state == 'down' else (0.2, 0.2, 0.2, 1)
    color: (1, 1, 1, 1)
    bold: True
    size_hint: 1, 1
    text_size: self.width, None
    halign: 'center'
    valign: 'middle'
    font_size: dp(11)

<StatisticsScreen>:
    opacity: 1 if root.is_visible else 0
    size_hint: (1, 1) if root.is_visible else (0, 0)

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Top action bar
    BoxLayout:
        id: stat_menu_layout
        orientation: 'horizontal'
        size_hint: 1, None
        height: dp(36)
        pos_hint: {'x': 0, 'top': 1}
        spacing: dp(2)
        padding: dp(2), dp(2)
        canvas.before:
            Color:
                rgba: 0.12, 0.12, 0.12, 1
            Rectangle:
                pos: self.pos
                size: self.size

    # Chart image fills the space below the action bar
    Image:
        id: stat_image
        source: ""
        fit_mode: "contain"
        mipmap: True
        size_hint: 1, None
        height: root.height - dp(40)
        pos_hint: {'x': 0, 'y': 0}
