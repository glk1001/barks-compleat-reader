<StatMenuButton>:
    background_normal: ''
    background_down: ''
    border: (0, 0, 0, 0)
    background_color: (0.0, 0.8, 0.0, 0.5) if self.state == 'down' else (0, 0, 0, 0)
    color: (0, 0, 0, 1)
    bold: True
    size_hint: 1, 1
    text_size: self.width, None
    halign: 'center'
    valign: 'middle'
    font_size: dp(11)
    canvas.after:
        Color:
            rgba: 0, 0, 0, 0.6
        Line:
            rectangle: self.x + dp(1), self.y + dp(1), self.width - dp(2), self.height - dp(2)
            width: dp(0.5)

<StatisticsScreen>:
    opacity: 1 if root.is_visible else 0
    size_hint: (1, 1) if root.is_visible else (0, 0)

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    # Top tab bar
    BoxLayout:
        id: stat_menu_layout
        orientation: 'horizontal'
        size_hint: 1, None
        height: dp(36)
        pos_hint: {'x': 0, 'top': 1}
        spacing: dp(2)
        padding: dp(2), dp(2)

    # Chart image fills the space below the tab bar
    Image:
        id: stat_image
        source: ""
        fit_mode: "contain"
        mipmap: True
        size_hint: 1, None
        height: root.height - dp(40)
        pos_hint: {'x': 0, 'y': 0}
