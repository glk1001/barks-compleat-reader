<ComicBookReaderScreen>:
    orientation: "vertical"

    ActionBar:
        id: comic_action_bar
        height: root.ACTION_BAR_HEIGHT

        ActionView:
            use_separator: False

            ActionPrevious:
                id: action_title
                title: "test title" # Will be set dynamically
                with_previous: False
                app_icon: root.app_icon_filepath

            ActionOverflow:

            ActionButton:
                id: close_button
                text: "Close"
                icon: root.action_bar_close_icon_filepath
                mipmap: True
                important: True
                draggable: False
                on_press: root.comic_book_reader_widget.close_comic_book_reader(root.ids.fullscreen_button)

            ActionButton:
                id: fullscreen_button
                text: "Fullscreen"
                icon: root.action_bar_fullscreen_filepath
                mipmap: True
                important: True
                draggable: False
                on_press: root.comic_book_reader_widget.toggle_fullscreen(self)

            ActionSeparator:

            ActionButton:
                id: goto_start_page_button
                text: "Goto Start"
                icon: root.action_bar_goto_start_filepath
                mipmap: True
                draggable: False
                on_press: root.comic_book_reader_widget.goto_start_page(self)

            ActionButton:
                id: goto_last_page_button
                text: "Goto End"
                icon: root.action_bar_goto_end_filepath
                mipmap: True
                draggable: False
                on_press: root.comic_book_reader_widget.goto_last_page(self)

            ActionButton:
                id: goto_page_button
                text: "Goto Page"
                icon: root.action_bar_goto_icon_filepath
                mipmap: True
                draggable: False
                on_press: root.comic_book_reader_widget.goto_page(self)
